@using Test.Business.ViewModels.BlogVMs﻿
@model CreateBlogVm

<div class="container" style="margin-top: 100px">
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="mb-3 col-md-4">
                <label asp-for="Title" class="form-label">Title</label>
                <input class="form-control" asp-for="Title">
                <span asp-validation-for="Title" style="color:red"></span>
            </div>
        </div>
        <div class="row align-items-center ">
            <div class="mb-3  col-md-4">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" style="color:red"></span>
            </div>
        </div>
        <div class="row align-items-center">
            <div class="mb-3 col-md-4">
                <label asp-for="Image" class="form-label">Image</label>
                <input class="form-control" asp-for="Image">
                <span asp-validation-for="Image" style="color:red"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>